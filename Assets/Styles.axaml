<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Background="#FF0A0A14">
            <StackPanel Spacing="20">
                <TextBlock Text="AetherInstall â€” AetherGlow Pro Theme" FontSize="24" FontWeight="Bold" Foreground="#FFFFFFFF"/>
                <Button Content="Primary Button" Classes="Primary"/>
                <Button Content="Secondary Button" Classes="Secondary"/>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- AetherGlow Pro Color Resources -->
    <Styles.Resources>
        <!-- Background Palette -->
        <SolidColorBrush x:Key="Background">#FF0A0A14</SolidColorBrush>
        <SolidColorBrush x:Key="Surface">#FF14141F</SolidColorBrush>
        <SolidColorBrush x:Key="Card">#26FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="CardHover">#40FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="Border">#33FFFFFF</SolidColorBrush>
        
        <!-- Accent Palette -->
        <SolidColorBrush x:Key="Accent">#FF00E6FF</SolidColorBrush>
        <SolidColorBrush x:Key="AccentHover">#FF33EBFF</SolidColorBrush>
        <SolidColorBrush x:Key="AccentPressed">#FF00C7E6</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryAccent">#FF7B61FF</SolidColorBrush>
        <SolidColorBrush x:Key="Success">#FF00FF9D</SolidColorBrush>
        <SolidColorBrush x:Key="Warning">#FFFFD166</SolidColorBrush>
        <SolidColorBrush x:Key="Error">#FFFF6B6B</SolidColorBrush>
        
        <!-- Text Palette -->
        <SolidColorBrush x:Key="TextPrimary">#FFFFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="TextSecondary">#CCFFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="TextTertiary">#99FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="TextDisabled">#66FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="OnAccent">#FF0A0A14</SolidColorBrush>
        
        <!-- Drop Shadow Effects (Glow) -->
        <DropShadowEffect x:Key="GlowPrimary" Color="#FF00E6FF" Opacity="0.75" BlurRadius="28" OffsetX="0" OffsetY="0"/>
        <DropShadowEffect x:Key="GlowSecondary" Color="#FF7B61FF" Opacity="0.6" BlurRadius="20" OffsetX="0" OffsetY="0"/>
        <DropShadowEffect x:Key="GlowSuccess" Color="#FF00FF9D" Opacity="0.75" BlurRadius="28" OffsetX="0" OffsetY="0"/>
    </Styles.Resources>

    <!-- Window Styles -->
    <Style Selector="Window">
        <Setter Property="Background" Value="{StaticResource Background}"/>
        <Setter Property="FontFamily" Value="Inter, Segoe UI, Arial"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>

    <!-- Typography Styles -->
    <Style Selector="TextBlock.title">
        <Setter Property="FontSize" Value="34"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style Selector="TextBlock.subtitle">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style Selector="TextBlock.app-name">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style Selector="TextBlock.app-desc">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
    </Style>

    <!-- Button.Primary Style - AetherGlow Accent -->
    <Style Selector="Button.Primary">
        <Setter Property="Background" Value="{StaticResource Accent}"/>
        <Setter Property="Foreground" Value="{StaticResource OnAccent}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="22"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="MinHeight" Value="44"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect" Value="{StaticResource GlowPrimary}"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.Primary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource AccentHover}"/>
    </Style>

    <Style Selector="Button.Primary:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource AccentPressed}"/>
    </Style>

    <Style Selector="Button.Primary:disabled /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource TextDisabled}"/>
        <Setter Property="TextBlock.Foreground" Value="{StaticResource TextTertiary}"/>
    </Style>

    <!-- Button.Secondary Style - Glass Card -->
    <Style Selector="Button.Secondary">
        <Setter Property="Background" Value="{StaticResource Card}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="22"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="MinHeight" Value="44"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.Secondary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource CardHover}"/>
    </Style>

    <Style Selector="Button.Secondary:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource Card}"/>
    </Style>

    <!-- Button.IconButton Style - Transparent with Glass Hover -->
    <Style Selector="Button.IconButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.IconButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource CardHover}"/>
    </Style>

    <!-- Card Styles - Glass Morphism -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{StaticResource Card}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="18"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.card:pointerover">
        <Setter Property="Background" Value="{StaticResource CardHover}"/>
    </Style>

    <!-- CheckBox Styles - AetherGlow Accent -->
    <Style Selector="CheckBox">
        <Setter Property="MinWidth" Value="0"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style Selector="CheckBox /template/ Border#NormalRectangle">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="CheckBox:pointerover /template/ Border#NormalRectangle">
        <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
    </Style>

    <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{StaticResource Accent}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
    </Style>

    <Style Selector="CheckBox /template/ Path#CheckGlyph">
        <Setter Property="Stroke" Value="{StaticResource OnAccent}"/>
        <Setter Property="StrokeThickness" Value="3"/>
        <Setter Property="StrokeLineCap" Value="Round"/>
    </Style>

    <!-- ProgressBar Styles - AetherGlow -->
    <Style Selector="ProgressBar">
        <Setter Property="Height" Value="10"/>
        <Setter Property="Background" Value="{StaticResource Card}"/>
        <Setter Property="Foreground" Value="{StaticResource Accent}"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Effect" Value="{StaticResource GlowPrimary}"/>
    </Style>

    <!-- ListBox Styles - Dark Glass -->
    <Style Selector="ListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
    </Style>

    <Style Selector="ListBoxItem">
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="ListBoxItem:selected">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- ScrollViewer Styles -->
    <Style Selector="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="ScrollBar">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="ScrollBar:vertical">
        <Setter Property="Width" Value="8"/>
    </Style>

    <Style Selector="ScrollBar:horizontal">
        <Setter Property="Height" Value="8"/>
    </Style>

    <Style Selector="ScrollBar /template/ Thumb">
        <Setter Property="Background" Value="{StaticResource Card}"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style Selector="ScrollBar /template/ Thumb:pointerover">
        <Setter Property="Background" Value="{StaticResource CardHover}"/>
    </Style>

    <!-- Status Colors -->
    <Style Selector="TextBlock.status-downloading">
        <Setter Property="Foreground" Value="{StaticResource Accent}"/>
    </Style>

    <Style Selector="TextBlock.status-installing">
        <Setter Property="Foreground" Value="{StaticResource Warning}"/>
    </Style>

    <Style Selector="TextBlock.status-done">
        <Setter Property="Foreground" Value="{StaticResource Success}"/>
    </Style>

    <Style Selector="TextBlock.status-failed">
        <Setter Property="Foreground" Value="{StaticResource Error}"/>
    </Style>

    <!-- PathIcon Styles -->
    <Style Selector="PathIcon">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.status-skipped">
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
    </Style>

</Styles>