<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="20">
                <TextBlock Text="AppBundle Modern Styles" FontSize="24" FontWeight="Bold"/>
                <Button Content="Primary Button" Classes="primary"/>
                <Button Content="Secondary Button" Classes="secondary"/>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- Color Resources -->
    <Styles.Resources>
        <!-- Primary Colors -->
        <SolidColorBrush x:Key="PrimaryBrush">#3B82F6</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryHoverBrush">#2563EB</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryPressedBrush">#1D4ED8</SolidColorBrush>
        
        <!-- Secondary Colors -->
        <SolidColorBrush x:Key="SecondaryBrush">#6B7280</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryHoverBrush">#374151</SolidColorBrush>
        
        <!-- Success Colors -->
        <SolidColorBrush x:Key="SuccessBrush">#10B981</SolidColorBrush>
        <SolidColorBrush x:Key="WarningBrush">#F59E0B</SolidColorBrush>
        <SolidColorBrush x:Key="ErrorBrush">#EF4444</SolidColorBrush>
        
        <!-- Background Colors -->
        <SolidColorBrush x:Key="BackgroundBrush">#F9FAFB</SolidColorBrush>
        <SolidColorBrush x:Key="CardBrush">#FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="BorderBrush">#E5E7EB</SolidColorBrush>
        
        <!-- Text Colors -->
        <SolidColorBrush x:Key="TextPrimaryBrush">#111827</SolidColorBrush>
        <SolidColorBrush x:Key="TextSecondaryBrush">#6B7280</SolidColorBrush>
        <SolidColorBrush x:Key="TextMutedBrush">#9CA3AF</SolidColorBrush>
    </Styles.Resources>

    <!-- Window Styles -->
    <Style Selector="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="FontFamily" Value="Inter, Segoe UI, Arial"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Typography Styles -->
    <Style Selector="TextBlock.title">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style Selector="TextBlock.subtitle">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <Style Selector="TextBlock.app-name">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.app-status">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <!-- Button Styles -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
        <Setter Property="RenderTransform" Value="scale(1.02)"/>
    </Style>

    <Style Selector="Button.primary:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.secondary:pointerover">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
    </Style>

    <!-- Card Styles -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
        <Setter Property="BoxShadow" Value="0 1 3 0 #0000001A, 0 1 2 0 #0000000F"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.card:pointerover">
        <Setter Property="BoxShadow" Value="0 4 6 -1 #0000001A, 0 2 4 -1 #0000000F"/>
        <Setter Property="RenderTransform" Value="translateY(-2)"/>
    </Style>

    <Style Selector="Border.card.selected">
        <Setter Property="Background" Value="#EFF6FF"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- CheckBox Styles -->
    <Style Selector="CheckBox.modern">
        <Setter Property="MinWidth" Value="0"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="Padding" Value="8,0,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="CheckBox.modern /template/ Border#NormalRectangle">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Background" Value="White"/>
    </Style>

    <Style Selector="CheckBox.modern:checked /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
    </Style>

    <Style Selector="CheckBox.modern /template/ Path#CheckGlyph">
        <Setter Property="Stroke" Value="White"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="StrokeLineCap" Value="Round"/>
    </Style>

    <!-- TextBox Styles -->
    <Style Selector="TextBox.search">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="Watermark" Value="Search applications..."/>
    </Style>

    <Style Selector="TextBox.search:focus">
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- ProgressBar Styles -->
    <Style Selector="ProgressBar.modern">
        <Setter Property="Height" Value="8"/>
        <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- Status Colors -->
    <Style Selector="TextBlock.status-downloading">
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.status-installing">
        <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
    </Style>

    <Style Selector="TextBlock.status-done">
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
    </Style>

    <Style Selector="TextBlock.status-failed">
        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
    </Style>

    <Style Selector="TextBlock.status-skipped">
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
    </Style>

</Styles>