<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AppBundle.Avalonia"
             x:Class="AppBundle.Avalonia.App"
             RequestedThemeVariant="Dark">
             <!-- AetherInstall uses Dark theme with AetherGlow Pro color system -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Assets/Styles.axaml"/>
    </Application.Styles>
</Application>